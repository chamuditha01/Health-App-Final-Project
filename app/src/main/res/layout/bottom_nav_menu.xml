

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Other UI elements -->

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/oval_background"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onclickdashboard"
            android:orientation="vertical"
            tools:ignore="DuplicateIds">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:contentDescription="Home"
                android:scaleType="fitCenter"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/nav_home1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:gravity="center"
                android:text="Home" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_market"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="Home"
                android:scaleType="fitCenter"
                android:layout_marginTop="3dp"
                android:src="@drawable/market"
                 />

            <TextView
                android:id="@+id/nav_marketplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marketplace"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_aboutus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Home"
                android:scaleType="fitCenter"
                android:layout_marginTop="-1dp"
                android:src="@drawable/aboutus"
                />

            <TextView
                android:id="@+id/nav_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:layout_marginTop="-6dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="onclickprofile"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="6dp"
                android:contentDescription="profile"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_icon_512x512_w0uaq4yr" />

            <TextView
                android:id="@+id/nav_profile1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="Profile" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

