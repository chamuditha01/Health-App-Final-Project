<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ayursensei" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#08830B</item>
        <item name="colorPrimaryDark">#08830B</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Set the status bar color -->
        <item name="android:statusBarColor">#08830B</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Theme.Ayursensei.NoActionBar" >
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>




    <style name="Theme.Ayursensei.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ayursensei.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>